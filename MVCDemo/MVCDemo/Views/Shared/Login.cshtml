@{MVCDemo.Models.User usr = SuperDAL.GetUserForCookie(Context.Request.Cookies["user"]);}
@if (usr == null) {
    <div id="loginForm">
        <div>Login</div>
        <div class="form">
            <h3>Login</h3>
            <form action="User/Login" method="post">
                <ul>
                    <li>
                        <label for="txtUserName">Username:</label>
                        <input id="txtUserName" type="text" name="username" />
                    </li>
                    <li>
                        <label for="txtPassword">Password:</label>
                        <input id="txtPassword" type="password" name="password" />
                    </li>
                    <li>
                        <label for="chkRememberMe">Remember Me:</label>
                        <input id="chkRememberMe" type="checkbox"/>
                    </li>
                    <li><input type="submit" value="Sign In" /></li>
                </ul>
            </form>
        </div>
    </div>
} else {
    <span>Hello, @usr.UserName <a asp-action="Logout" asp-controller="User">Sign Out</a></span>
}
