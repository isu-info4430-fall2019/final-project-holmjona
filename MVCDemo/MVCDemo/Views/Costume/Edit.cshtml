@model MVCDemo.Costume

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Costume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorMain" class="control-label"></label>
                <input asp-for="ColorMain" class="form-control" />
                <span asp-validation-for="ColorMain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorSecondary" class="control-label"></label>
                <input asp-for="ColorSecondary" class="form-control" />
                <span asp-validation-for="ColorSecondary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorTertiary" class="control-label"></label>
                <input asp-for="ColorTertiary" class="form-control" />
                <span asp-validation-for="ColorTertiary" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasCape" /> @Html.DisplayNameFor(model => model.HasCape)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasMask" /> @Html.DisplayNameFor(model => model.HasMask)
                </label>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
