@model IEnumerable<MVCDemo.Costume>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColorMain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorSecondary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColorTertiary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasCape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasMask)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @*Look in Shared/DisplayTemplates*@
                    @Html.DisplayFor(modelItem => item.ColorMainAsHexString, "_ColorShow")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorSecondaryAsHexString, "_ColorShow")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorTertiaryAsHexString, "_ColorShow")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasCape)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasMask)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="Pagination" model="ViewBag.Pager" />
